<Window x:Class="SIMS_Booking.View.DriverLate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SIMS_Booking.View"
        mc:Ignorable="d"
        Title="DriverLate" Height="250" Width="400">
    <Grid>
        <Label Content="Enter how late you are (in minutes):" HorizontalAlignment="Center" Margin="0,33,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="lateTB" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Width="80" Height="20"/>
        <Button x:Name="lateButton" Content="Ok" HorizontalAlignment="Center" Margin="0,154,0,0" VerticalAlignment="Top" Width="40" Height="20" Click="lateButton_Click"/>

    </Grid>
</Window>
